generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Account {
  id        String       @id @default(cuid())
  createdAt DateTime     @default(now())
  updateAt  DateTime?
  Client    barbershop[]
  email     String
  hash      String

  firstName String?
  lastName  String?
}

model barbershop {
  id        Int       @unique @default(autoincrement())
  createdAt DateTime  @default(now())
  updateAt  DateTime?
  clientId  String
  Client    user      @relation(fields: [clientId], references: [id])
}
